generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. ADMIN
model Admin {
  id           String   @id @default(uuid()) @db.Uuid
  username     String   @db.VarChar(50)
  email        String   @unique @db.VarChar(255)
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz

  @@map("admin")
}

// 2. CLIENT
model Client {
  id          String   @id @default(uuid()) @db.Uuid
  phoneNumber String   @unique @map("phone_number") @db.VarChar(20)
  firstName   String?  @map("first_name") @db.VarChar(100)
  lastName    String?  @map("last_name") @db.VarChar(100)
  email       String?  @unique @db.VarChar(255)
  rating      Decimal? @default(5.0) @db.Decimal(2, 1)
  photoUrl    String?  @map("photo_url")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz

  // Relations
  wallet      Wallet?
  trips       Trip[]
  reviews     Review[] @relation("ClientReviewer")

  @@map("client")
}

// 3. DRIVER
model Driver {
  id            String   @id @default(uuid()) @db.Uuid
  phoneNumber   String   @unique @map("phone_number") @db.VarChar(20)
  taxiPlate     String?  @unique @map("taxi_plate") @db.VarChar(20)
  licenseNumber String?  @unique @map("license_number") @db.VarChar(50)
  photoUrl      String?  @map("photo_url")
  
  isAvailable   Boolean  @default(false) @map("is_available")
  isVerified    Boolean  @default(false) @map("is_verified")
  isActive      Boolean  @default(true) @map("is_active")
  
  rating        Decimal? @default(5.0) @db.Decimal(2, 1)
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz

  // Relations
  wallet      Wallet?
  trips       Trip[]
  reviews     Review[] @relation("DriverReviewer")

  @@map("driver")
}

// 4. WALLET
model Wallet {
  id        String   @id @default(uuid()) @db.Uuid
  balance   Decimal  @default(0.00) @db.Decimal(15, 2)
  currency  String   @default("XAF") @db.VarChar(3)

  // Clés étrangères vers Client OU Driver
  clientId  String?  @unique @map("client_id") @db.Uuid
  client    Client?  @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  driverId  String?  @unique @map("driver_id") @db.Uuid
  driver    Driver?  @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@map("wallet")
}

// 5. ITINERARY
model Itinerary {
  id                   String  @id @default(uuid()) @db.Uuid
  name                 String? @db.VarChar(255)
  startLat             Float   @map("start_lat")
  startLng             Float   @map("start_lng")
  endLat               Float   @map("end_lat")
  endLng               Float   @map("end_lng")
  distanceKm           Float?  @map("distance_km")
  estimatedDurationMin Int?    @map("estimated_duration_min")
  encodedPolyline      String? @map("encoded_polyline")

  @@map("itinerary")
}

// 6. TRIPS
model Trip {
  id                 String    @id @default(uuid()) @db.Uuid
  status             String    @default("REQUESTED") @db.VarChar(20)
  pickupAddress      String?   @map("pickup_address")
  destinationAddress String?   @map("destination_address")
  price              Decimal?  @db.Decimal(10, 2)
  startedAt          DateTime? @map("started_at") @db.Timestamptz
  endedAt            DateTime? @map("ended_at") @db.Timestamptz

  clientId           String    @map("client_id") @db.Uuid
  client             Client    @relation(fields: [clientId], references: [id])
  
  driverId           String?   @map("driver_id") @db.Uuid
  driver             Driver?   @relation(fields: [driverId], references: [id])

  review             Review?

  @@map("trips")
}

// 7. REVIEW
model Review {
  id               String   @id @default(uuid()) @db.Uuid
  ratingScore      Int      @map("rating_score") @db.SmallInt
  comment          String?
  createdAt        DateTime @default(now()) @map("created_at") @db.Timestamptz

  tripId           String   @unique @map("trip_id") @db.Uuid
  trip             Trip     @relation(fields: [tripId], references: [id])

  clientReviewerId String?  @map("client_reviewer_id") @db.Uuid
  clientReviewer   Client?  @relation("ClientReviewer", fields: [clientReviewerId], references: [id])

  driverReviewerId String?  @map("driver_reviewer_id") @db.Uuid
  driverReviewer   Driver?  @relation("DriverReviewer", fields: [driverReviewerId], references: [id])

  @@map("review")
}