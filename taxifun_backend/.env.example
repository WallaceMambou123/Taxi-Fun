# ===========================================
# TAXIFUN API - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# --- DATABASE (PostgreSQL) ---
DB_USERNAME=admin
DB_PASSWORD=Mambou2025!
DB_NAME=taxifun_db
DB_HOST=db
DB_PORT=5432

# Prisma connection string (uses variables above)
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

# --- REDIS (Cache) ---
REDIS_HOST=cache
REDIS_PORT=6379

# --- API ---
API_HOST=taxifun-api
NODE_ENV=production
PORT=3000

# --- JWT Authentication ---
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# --- TWILIO (SMS) ---
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# --- PGADMIN ---
PGADMIN_HOST=taxifun-pgadmin
PGADMIN_EMAIL=admin@taxifun.com
PGADMIN_PASSWORD=admin
